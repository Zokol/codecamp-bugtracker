<!DOCTYPE html>
<html>
<head>
    <title>BugTracker</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/customScripts.js")" type="text/javascript"></script>
    <script type="text/javascript">
        function loadPartialView(loadUrl, divid) {
            //Populate the contents of the placeholder with the result returned by the action method HomeController.PartialGrid
            $('#' + divid).load( loadUrl);
        }
    </script>
</head>
<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <h1>BugTracker</h1>
            </div>
            @if (Request.IsAuthenticated)
            {
                <div id="logindisplay">
                        <b>@Context.User.Identity.Name</b>
                        [<a href="#dialog" onclick="showModalPopup('Account/Profile/@Context.User.Identity.Name')">Profile</a>, @Html.ActionLink("Log Off", "LogOff", "Account") ]
                </div>
                 <div id="menucontainer">
                    <ul id="menu">
                        <li>@Html.ActionLink("Bugs", "Index", "Bugs")</li>
                        <li>@Html.ActionLink("Subscriptions", "Index", "Subscription")</li>
                        <li>@Html.ActionLink("Notifications", "Index", "Event")</li>
                    </ul>
                </div>
            }
            else
            {
                <div style="width:100%; height:102px"/>
            }
        </div>

        <div id="main">
            <div id="listview">
                @RenderBody()
            </div>
            <div id="detailview">
            </div>
            <div id="footer">
            </div>
        </div>
        <div id="boxes">
            <div id="dialog" class="window"></div>
            <div id="mask"></div>
        </div>
    </div>
</body>
</html>
