<!DOCTYPE html>

@if (bugtracker.Controllers.DataController.getChangedStatusListOfCurrentUserSinceCheck().Count() == 0){
    <style type="text/css">
    #menu .notification
    {
        background-color: #F5A9BC;    
    }
    ul#menu li .notification
    {
        background-color: #F5A9BC;    
    }
    </style>
}

else
{
    <style type="text/css">
    #menu .notification
    {
        background-color: #e8eef4;    
    }
    ul#menu li .notification
    {
        background-color: #e8eef4;    
    }
    </style>
}

<html>
<head>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/customScripts.js")" type="text/javascript"></script>
    <script type="text/javascript">
        function loadPartialView(loadUrl, divid) {
            //Populate the contents of the placeholder with the result returned by the action method HomeController.PartialGrid
            $('#' + divid).load( loadUrl);
        }
    </script>
</head>                    
<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <img src="../../Content/themes/base/images/bug_logo.png" height="90px" alt="BugTracker" />
            </div>
            @if (Request.IsAuthenticated)
            {
                <div id="logindisplay">
                        <b>@Context.User.Identity.Name</b>
                        [<a href="#dialog" onclick="showModalPopup('/Account/Profile')">Profile</a>, @Html.ActionLink("Log Off", "LogOff", "Account") ]
                </div>
                 <div id="menucontainer">
                    <ul id="menu">
                        <li><img src="../../Content/themes/base/images/bug-icon.png" height="20px"/>@Html.ActionLink("Bugs", "Index", "Bugs")</li>
                        <li><img src="../../Content/themes/base/images/list-icon.png" height="20px"/>@Html.ActionLink("Subscriptions", "Index", "Subscription")</li>
                        <li><img src="../../Content/themes/base/images/list-icon.png" height="20px"/>@Html.ActionLink("Statistics", "Global", "Stats")</li>
                        <li><img src="../../Content/themes/base/images/list-icon.png" height="20px"/>@Html.ActionLink("Users", "Index", "UserList")</li>
                        
                        <li class="notification"><img src="../../Content/themes/base/images/lightbulb.png" height="20px"/>@Html.ActionLink("Notifications", "Index", "Event")</li>
                    </ul>
                </div>
            }
            else
            {
                <div style="width:100%; height:102px"/>
            }
        </div>

        <div id="main">
            <div id="listview">
                @RenderBody()
            </div>
            <div id="detailview">
            </div>
            <div id="footer">
            </div>
        </div>
        <div id="boxes">
            <div id="dialog" class="window"></div>
            <div id="mask"></div>
        </div>
    </div>
</body>
</html>
